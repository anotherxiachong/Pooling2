<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff495a" >
        
        <TextView
            android:id="@+id/back_tv_detail_offline"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/ic_action_back"
            android:textColor="@drawable/text_while"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_tv_detail_offline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="拼单详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />
           
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background"
    android:orientation="vertical" 
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usericon_offline"
            android:src="@drawable/pooling_ic"
            android:visibility="gone"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/r_username_offline"
            android:layout_gravity="center"/>
    
    </LinearLayout>

    <View
        android:id="@+id/list_item_seperator_detail"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/light_grey" />
    
     <ListView
                    android:id="@+id/datalist_detail_offline" 
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
		 			android:clipToPadding="false"
        			android:divider="@android:color/transparent"
        			android:dividerHeight="10dp"
        			android:padding="10dp"
        			android:scrollbarStyle="outsideOverlay"
        			tools:listitem="@layout/image_info_layout"/>
    
     <View
        android:id="@+id/list_item_seperator_2_detail_offline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/light_grey" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">  
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_describe_offline"
            android:hint="商品描述"
            android:lines="5"
            android:background="@null"
            android:editable="false"
            android:focusable="false"/>
    
    </LinearLayout>
    
    <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_link_offline"
            android:background="@null"
            android:editable="false"
            android:focusable="false"/>
    
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止时间"/>
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_deadline_offline"
            android:background="@null"
            android:editable="false"
            android:focusable="false"/>
    
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">  
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_online_address_offline"
            android:background="@null"
            android:editable="false"
            android:focusable="false"/>
    
    </LinearLayout>
    
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_offline_address_offline"
            android:editable="false"
            android:background="@null"
            android:focusable="false"/>
    
    </LinearLayout>
    
      <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
       
        
        <EditText 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r_tabs_offline"
            android:text="N/A"
            android:editable="false"
            android:background="@null"
            android:focusable="false"/>
    
    </LinearLayout>
    
      <View
        android:id="@+id/list_item_seperator_3_detail_offline"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/light_grey" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/follow_bill_detail_offline"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="跟单"
            android:textSize="12sp"
            android:textStyle="normal" 
            android:onClick="follow"/>

        <Button
            android:id="@+id/cancel_detail_offline"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:text="取消"
            android:textSize="12sp"
            android:textStyle="normal" 
            android:onClick="cancel"/>
    </LinearLayout>

</LinearLayout>   
</ScrollView>
</LinearLayout>