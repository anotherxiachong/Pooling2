<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.another.pooling.MyTelActivity" >
    
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff495a" >
        
       <TextView
            android:id="@+id/back_tv_my_tel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/ic_action_back"
            android:textColor="@drawable/text_while"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_tv_my_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="联系方式"
            android:textColor="#ffffff"
            android:textSize="20sp" />

      
    </RelativeLayout>

    <EditText
        android:id="@+id/mytel_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:ems="10"
        android:inputType="phone"
        android:gravity="center" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/mytel_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="保存" />

</RelativeLayout>
