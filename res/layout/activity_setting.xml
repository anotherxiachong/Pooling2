<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.another.pooling"
    xmlns:hyman="http://schemas.android.com/apk/res/com.another.pooling"
    xmlns:sat="http://schemas.android.com/apk/res/com.another.pooling"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.another.pooling.SlidingMenu
        android:id="@+id/id_menu_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9966CC"
        hyman:rightPadding="80dp" >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            
            <include layout="@layout/left_menu"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"  
                android:background="#FFFFFF">
                
              <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#9966CC" >
        
        <TextView
            android:id="@+id/push_tv_setting"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:background="@drawable/ic_action_overflow"
            android:textColor="@drawable/text_while"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/title_tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="20sp" />

      
    </RelativeLayout>

    
    <LinearLayout style="@style/wrap_layout" >
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/account_setting">
            <TextView style="@style/usertext" android:text="账号设置" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
        
        <!-- 分割线 -->
          <View style="@style/bg_line"/>
         
          <!-- 下圆角-->
       <LinearLayout style="@style/bottom_layout"
           android:id="@+id/account_exit_setting">
            <TextView style="@style/usertext" android:text="退出当前账号" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
             
    </LinearLayout>
    
     <LinearLayout style="@style/wrap_layout">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/no_image_setting" >
            <TextView style="@style/usertext" android:text="2g/3g/4g不接收图片" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
        
        <!-- 分割线 -->
          <View style="@style/bg_line"/>
          <!-- 无圆角-->
       <LinearLayout style="@style/mid_layout"
           android:id="@+id/change_background_setting">
            <TextView style="@style/usertext" android:text="更改背景色" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
             <View style="@style/bg_line"/>
          <!-- 下圆角-->
       <LinearLayout style="@style/bottom_layout"
           android:id="@+id/clear_cache_setting">
            <TextView style="@style/usertext" android:text="清除缓存" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
             
    </LinearLayout>
    
      <LinearLayout style="@style/wrap_layout">
        <!-- 上圆角-->
        <LinearLayout style="@style/top_layout"
            android:id="@+id/share_setting" >
            <TextView style="@style/usertext" android:text="分享" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
        
        <!-- 分割线 -->
          <View style="@style/bg_line"/>
          <!-- 无圆角-->
       <LinearLayout style="@style/mid_layout"
           android:id="@+id/feedback_setting">
            <TextView style="@style/usertext" android:text="反馈" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
             <View style="@style/bg_line"/>
          <!-- 下圆角-->
       <LinearLayout style="@style/bottom_layout"
           android:id="@+id/about_setting" >
            <TextView style="@style/usertext" android:text="关于" />
          	<ImageView style="@style/img_arrow"/>
        </LinearLayout>
             
    </LinearLayout>            </LinearLayout>
        </LinearLayout>
    </com.another.pooling.SlidingMenu>

</RelativeLayout>
